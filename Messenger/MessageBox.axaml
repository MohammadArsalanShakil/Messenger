<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="450"
        Height="150"
        Icon="/Resources/Icons/icons8-error-70.png"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        x:Class="Messenger.MessageBox">
  <StackPanel HorizontalAlignment="Center">
    <TextBlock HorizontalAlignment="Center" Margin="25" Name="Text"/>
    <StackPanel HorizontalAlignment="Center" Margin="25" Orientation="Horizontal" Name="Buttons">
      <StackPanel.Styles>
        <Style Selector="Button">
          <Setter Property="Margin" Value="5"/>
        </Style>
      </StackPanel.Styles>

    </StackPanel>
  </StackPanel>
</Window>
